<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F0F2F5"
    android:layout_height="match_parent">
    <LinearLayout
    android:id="@+id/linone"
    android:background="@mipmap/b3f"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/reone"
        android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/huihua"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/aai"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                />
            <ImageView
                android:id="@+id/setting"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/aak"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@+id/huihua"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/retwo"
            android:layout_below="@+id/recyone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/touxiang"
                android:layout_margin="12dp"/>
            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#fff"
                android:text="登录/注册 >"
                android:layout_toRightOf="@+id/user_head"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#fff"
                android:text="user_name"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/user_head"
                />
            <TextView
                android:id="@+id/tv_zhunxaing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:visibility="gone"
                android:textColor="#fff"
                android:text="京享值21279"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/user_head"
                android:layout_below="@+id/tv_name"
                />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lintwo1"
        android:layout_below="@+id/linone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#fff"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/waitzhifu"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/i1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:background="@mipmap/ic_user_order_wait_pay"/>
            <TextView
                android:text="待支付"
                android:id="@+id/t1"
                android:layout_below="@+id/i1"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/waitshouhuo"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/i2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:background="@mipmap/ic_user_order_wait_drive"/>
            <TextView
                android:text="待收货"
                android:id="@+id/t2"
                android:layout_below="@+id/i2"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/waitpingjia"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/i3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:background="@mipmap/ic_user_order_wait_comment"/>
            <TextView
                android:text="待评价"
                android:id="@+id/t3"
                android:layout_below="@+id/i3"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/i4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:background="@mipmap/ic_user_property_card"/>
            <TextView
                android:text="退换/售后"
                android:id="@+id/t4"
                android:layout_below="@+id/i4"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/myorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/i5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:background="@mipmap/ic_user_order"/>
            <TextView
                android:text="我的订单"
                android:id="@+id/t5"
                android:layout_below="@+id/i5"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lithree"
        android:layout_below="@+id/lintwo1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#fff"
        android:gravity="center">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ii1"
                android:layout_width="60dp"
                android:text="0.00"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_margin="5dp" />
            <TextView
                android:text="京豆"
                android:id="@+id/tt1"
                android:layout_below="@+id/ii1"
                android:gravity="center"
                android:layout_width="60dp"

                android:textSize="15sp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ii2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:text="0.00"
                android:gravity="center"
                />
            <TextView
                android:text="优惠"
                android:id="@+id/tt2"
                android:textSize="15sp"
                android:layout_below="@+id/ii2"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ii3"
                android:text="0.00"
                android:textSize="20sp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:gravity="center"
                />
            <TextView
                android:text="白条"
                android:id="@+id/tt3"
                android:textSize="15sp"
                android:layout_below="@+id/ii3"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ii4"
                android:layout_width="60dp"
                android:textSize="20sp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="0.00"/>
            <TextView
                android:text="京东金库"
                android:id="@+id/tt4"
                android:textSize="15sp"
                android:layout_below="@+id/ii4"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ii5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:background="@mipmap/ic_user_property"/>
            <TextView
                android:text="我的钱包"
                android:id="@+id/tt5"
                android:layout_below="@+id/ii5"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linfour"
        android:layout_below="@+id/lithree"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="100dp"
        android:background="#fff"
        >

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/iii1"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/b_b"/>
            <TextView
                android:id="@+id/ttt1"
                android:text="满199减100"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_below="@+id/iii1"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/iii2"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/b_c"/>
            <TextView
                android:id="@+id/ttt2"
                android:text="满199减100"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iii2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/iii3"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/b_d"/>
            <TextView
                android:id="@+id/ttt3"
                android:text="满199减100"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iii3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/iii4"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/b_e"/>
            <TextView
                android:id="@+id/ttt4"
                android:text="满199减100"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_below="@+id/iii4"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/linfive"
        android:layout_below="@+id/linfour"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#fff"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/iiii1"
                android:layout_width="60dp"
                android:text="0"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp" />
            <TextView
                android:text="商品关注"
                android:id="@+id/tttt1"
                android:layout_below="@+id/iiii1"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/iiii2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:text="0"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                />
            <TextView
                android:text="店铺关注"
                android:id="@+id/tttt2"
                android:textSize="15sp"
                android:layout_below="@+id/iiii2"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/iiii3"
                android:text="0"
                android:textSize="20sp"
                android:layout_width="60dp"
                android:layout_centerHorizontal="true"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:gravity="center"
                />
            <TextView
                android:text="内容关注"
                android:id="@+id/tttt3"
                android:textSize="15sp"
                android:layout_below="@+id/iiii3"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/iiii4"
                android:layout_width="60dp"
                android:textSize="20sp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="0"/>
            <TextView
                android:text="浏览记录"
                android:id="@+id/tttt4"
                android:textSize="15sp"
                android:layout_below="@+id/iiii4"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>