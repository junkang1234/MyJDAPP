<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="150dp"
    android:background="#fff">

    <CheckBox
        android:button="@drawable/check"
        android:id="@+id/radio_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:focusable="true"
        />

    <ImageView
        android:layout_toRightOf="@+id/radio_child"
        android:src="@mipmap/ic_launcher"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/contain_image"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/child_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contain_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/contain_image"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/child_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contain_price"
        android:textColor="#f00"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/contain_image"
        android:padding="10dp"
        android:layout_margin="10dp"/>
    <lenovo.example.com.myjdapp.untils.MyTextView
        android:id="@+id/mytextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"></lenovo.example.com.myjdapp.untils.MyTextView>
</RelativeLayout>