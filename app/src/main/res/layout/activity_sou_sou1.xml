<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    tools:context="activity.SouSou1Activity">

    <LinearLayout
        android:id="@+id/linear"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:padding="10dp"
            android:id="@+id/normal_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/left_jiantou"
            android:layout_weight="5"
            />
        <Button
            android:layout_margin="8dp"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:id="@+id/button_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="搜索一下"
            android:gravity="left"
            android:background="@drawable/searchbox_bj1"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/qiehuan"
            android:background="@mipmap/ic_goods_list_hor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="5"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_below="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:text="综合"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textSize="20sp"
                />
            <TextView
                android:text="销量"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#f00"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textSize="20sp"
                />
            <TextView
                android:text="价格"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textSize="20sp"
                />
            <TextView
                android:text="筛选"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#f00"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textSize="20sp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3"
        android:layout_below="@+id/linear2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="京东配送"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="15sp"
                />
            <Button
                android:text="品牌"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="15sp"
                />
            <Button
                android:text="分类"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="15sp"
                />
            <Button
                android:text="产品形态"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="15sp"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/linear3"
        android:id="@+id/recyfour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
